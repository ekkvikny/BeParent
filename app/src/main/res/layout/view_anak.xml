<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_anak"
    android:layout_width="300dp"
    android:layout_height="147dp"
    android:layout_marginTop="16dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intext_namaanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Anak" />

    <EditText
        android:id="@+id/text_profilanak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:longClickable="false"
        android:text="Nama Anak" />

    <TextView
        android:id="@+id/text_tgllahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir" />

    <EditText
        android:id="@+id/text_edittgllahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:longClickable="false"
        android:text="01-01-2019" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_prifiljk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Jenis Kelamin" />

        <View
            android:layout_width="108dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/text_profilkelaminanak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Laki-Laki"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>


</LinearLayout>